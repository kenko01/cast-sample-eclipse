<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/cast_shape_backgroud"
    android:gravity="center_horizontal"
    >

    <include layout="@layout/layout_dialog_title"></include>
    <TextView android:id="@+id/tv_msg"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginLeft="@dimen/cast_margin_left"
        android:layout_marginTop="20dp"
        android:layout_marginRight="10dp"
        android:lineSpacingMultiplier="1.2"
        android:textSize="15dp"
        android:textColor="@color/cast_textPrimary"
        android:background="@color/transparent_color"
        />
    <include layout="@layout/layout_bottombtns"></include>
</LinearLayout>