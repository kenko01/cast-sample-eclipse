<?xml version="1.0" encoding="utf-8"?>
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="36dp"
        android:gravity="center"
        android:background="@color/transparent_color"
        >
        <TextView android:id="@+id/btn_cancel"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:minWidth="60dp"
            android:gravity="center"
            android:text="@string/cast_cancel"
            android:textSize="14sp"
            android:textColor="@drawable/cast_bottom_l_text_color"
            android:visibility="gone"
            android:singleLine="true"
            android:background="@drawable/cast_selector_bottom_btn"
            android:textStyle="bold"
            />

        <TextView android:id="@+id/btn_ok"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:minWidth="60dp"
            android:gravity="center"
            android:text="@string/cast_ok"
            android:textSize="14sp"
            android:textColor="@drawable/cast_bottom_r_text_color"
            android:singleLine="true"
            android:background="@drawable/cast_selector_bottom_btn"
            android:textStyle="bold"
            />
    </LinearLayout>