<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:background="?android:selectableItemBackground">
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:scaleType="fitCenter"
        android:src="@drawable/cast_ic_dongle"
        android:layout_centerVertical="true"
        android:background="@color/transparent_color"
        android:id="@+id/iv_device"
        android:layout_marginLeft="@dimen/cast_margin_left"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="vertical"
        android:gravity="center_vertical"
        android:layout_marginLeft="10dp"
        android:layout_centerVertical="true"
        android:layout_marginRight="32dp"
        android:layout_toRightOf="@id/iv_device"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:textColor="@color/cast_textPrimary"
            android:background="@color/transparent_color"
            android:singleLine="true"
            android:id="@+id/name_tv"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="10sp"
            android:textColor="#9B9B9B"
            android:text="  "
            android:background="@color/transparent_color"
            android:layout_marginTop="2dp"
            android:singleLine="true"
            android:id="@+id/tv_state"/>
    </LinearLayout>

    <ImageView android:id="@+id/btn_more"
        android:layout_width="32dp"
        android:layout_height="24dp"
        android:src="@drawable/cast_ic_more"
        android:scaleType="fitCenter"
        android:background="@color/transparent_color"
        android:layout_marginRight="3dp"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        />
</RelativeLayout>